<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml//tickns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_1.xsd"
	version="2.1">

	<persistence-unit name="ucfn">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:jboss/datasources/UCFNDataSource</jta-data-source>
		<class>model.Person</class>

		<properties>
			<!-- Properties for PostgreSQL -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

			<!-- Properties for Hibernate provider -->
			<property name="hibernate.hbm2ddl.auto" value="update"/>
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="false"/>
		</properties>
	</persistence-unit>
</persistence>
